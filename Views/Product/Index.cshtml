@model List<demo.Models.Product>

<h2>產品清單</h2>

<p>
    <a asp-action="Detail" class="btn btn-primary">新增產品</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product</th>
            <th>Item</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info btn-sm">查看 / 編輯</a>
                </td>
            </tr>
        }
    </tbody>
</table>
