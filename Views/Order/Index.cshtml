@model List<demo.Models.Order>

@{
    ViewData["Title"] = "訂單列表";
}

<h2>訂單列表</h2>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>訂單編號</th>
            <th>建立時間</th>
            <th>總金額</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@order.TotalAmount.ToString("N0")</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@order.Id" class="btn btn-sm btn-info">檢視明細</a>
                </td>
            </tr>
        }
    </tbody>
</table>
